<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_large"
        android:gravity="center_vertical">

        <!-- Ícono del medicamento con fondo circular -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/ic_medicamento_background"
            android:padding="8dp">
            
            <ImageView
                android:id="@+id/ivIconoMedicamento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Ícono del medicamento"
                android:tint="@color/primary" />
        </FrameLayout>

        <!-- Información del medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del medicamento -->
            <TextView
                android:id="@+id/tvNombreMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paracetamol 500mg"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- Información del medicamento -->
            <TextView
                android:id="@+id/tvInfoMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprimidos • 3 tomas diarias"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- Barras de progreso para tomas -->
            <LinearLayout
                android:id="@+id/llBarrasTomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- Información de stock -->
            <TextView
                android:id="@+id/tvStockInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock: 25/30 comprimidos"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            
            <!-- Botón Posponer (visible solo cuando hay tomas en alerta) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPosponer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posponer"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:backgroundTint="@color/warning"
                android:minWidth="80dp"
                android:minHeight="36dp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/margin_small"
                style="@style/MedicineButton" />
            
            <!-- Botón Tomado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTomado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine_taken"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:backgroundTint="@color/success"
                android:minWidth="80dp"
                android:minHeight="40dp"
                style="@style/MedicineButton" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
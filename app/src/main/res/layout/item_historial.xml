<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMedicamento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_large"
        android:gravity="center_vertical">

        <!-- Ícono del medicamento con fondo circular -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/ic_medicamento_background"
            android:padding="8dp">
            
            <ImageView
                android:id="@+id/ivIcono"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_medicamento"
                android:contentDescription="@string/medicine_icon"
                android:tint="@color/white" />
        </FrameLayout>

        <!-- Información del medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_name"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPresentacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_presentation"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_tiny" />

            <TextView
                android:id="@+id/tvFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/treatment_start_date"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_tiny" />

            <TextView
                android:id="@+id/tvFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/treatment_end_date"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_tiny" />

            <TextView
                android:id="@+id/tvDuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/treatment_duration"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_tiny" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_status"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_tiny" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
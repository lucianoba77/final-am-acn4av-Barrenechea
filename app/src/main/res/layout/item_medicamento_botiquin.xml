<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMedicamento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- Información del medicamento (izquierda) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/margin_medium">

            <!-- Fila superior: Ícono y nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_small">

                <!-- Ícono del tipo de presentación con fondo circular -->
                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@drawable/ic_medicamento_background"
                    android:padding="8dp">
                    
                    <ImageView
                        android:id="@+id/ivIcono"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                    android:src="@drawable/ic_medicamento"
                        android:contentDescription="@string/medicine_icon"
                        android:tint="@color/primary" />
                </FrameLayout>

                <!-- Nombre del medicamento -->
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/medicine_name"
                    android:textSize="20sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Presentación -->
            <TextView
                android:id="@+id/tvPresentacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_presentation"
                android:textSize="16sp"
                android:textColor="#2C2C2C"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- Stock -->
            <TextView
                android:id="@+id/tvStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_stock"
                android:textSize="15sp"
                android:textColor="#2C2C2C"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:visibility="gone" />

            <!-- Estado (Activo/Vencido) -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_status"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_tiny" />

            <!-- Fecha de vencimiento (solo si no está vencido) -->
            <TextView
                android:id="@+id/tvFechaVencimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#2C2C2C"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Botones (derecha) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón grande "Tomé una" (cuadrado) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTomeUna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:minHeight="48dp"
                android:text="Tomé una"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/success"
                android:visibility="gone"
                style="@style/Widget.Material3.Button"
                android:layout_marginBottom="@dimen/margin_small"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Botones pequeños: Editar y Eliminar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Botón Editar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:minHeight="44dp"
                    android:text="@string/btn_edit"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="@dimen/margin_tiny"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="@style/Widget.Material3.Button" />

                <!-- Botón Eliminar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:minHeight="44dp"
                    android:text="@string/btn_delete"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/error"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/padding_medium"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/historial_title"
            android:textSize="@dimen/text_size_header"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="8dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLayout"
        android:layout_above="@+id/barraNavegacion"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">


        <!-- Estadísticas Generales -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <TextView
                    android:id="@+id/tvEstadisticasGenerales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_statistics"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Historial Completo de Adherencia del Paciente -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_adherence_history_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:id="@+id/tvResumenAdherenciaGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_adherence_weekly_title"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chartAdherenciaGeneralSemanal"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_adherence_monthly_title"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chartAdherenciaGeneralMensual"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Gráfico de Adherencia por Medicamento -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adherence_chart_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chartAdherencia"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Plan de adherencia personalizada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlanAdherencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adherence_plan_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMedicamentosAdherencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/actvMedicamentosAdherencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/adherence_plan_hint"
                        android:inputType="text"
                        android:completionThreshold="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvResumenPlanAdherencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textStyle="bold"
                    android:text="@string/adherence_plan_summary_placeholder" />

                <TextView
                    android:id="@+id/tvEmptyPlanAdherencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adherence_plan_empty"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/secondary_text"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/margin_small" />

                <LinearLayout
                    android:id="@+id/layoutPlanCharts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/adherence_weekly_chart_title"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartAdherenciaSemanal"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/adherence_monthly_chart_title"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartAdherenciaMensual"
                        android:layout_width="match_parent"
                        android:layout_height="220dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tratamientos Concluidos -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/completed_treatments_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTratamientosConcluidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Medicamentos Ocasionales Consumidos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMedicamentosOcasionales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicamentos Ocasionales Consumidos"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMedicamentosOcasionales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tvEmptyOcasionales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No hay medicamentos ocasionales consumidos"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

    <!-- Barra de navegación inferior -->
    <include
        android:id="@+id/barraNavegacion"
        layout="@layout/nav_bar_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>